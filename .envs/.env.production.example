# ==============================================
# CONFIGURACIÓN DE AMBIENTE - PRODUCCIÓN
# ==============================================
# INSTRUCCIONES: Copia este archivo como .env.production y configura las variables

# Configuración básica
ENVIRONMENT=production
SECRET_KEY=change-this-to-a-super-secure-secret-key-in-production
DEBUG=False
DOMAIN=your-domain.com

# Configuración de zona horaria
TZ=America/Argentina/Buenos_Aires

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=your_project_name
DB_SERVICE_NAME=db

# Hosts permitidos y CORS
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1
CORS_ORIGIN_WHITELIST=https://your-domain.com,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==============================================
# BASE DE DATOS - POSTGRESQL
# ==============================================
POSTGRES_HOST=${DB_SERVICE_NAME}
POSTGRES_PORT=5432
POSTGRES_DB=your_microservice_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-production-password
PGTZ=America/Argentina/Buenos_Aires

# Variables adicionales para compatibilidad
DB_HOST=${DB_SERVICE_NAME}
DB_PORT=5432
DB_NAME=your_microservice_prod
DB_USER=postgres
DB_PASSWORD=your-secure-production-password

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================
# CELERY
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=America/Argentina/Buenos_Aires

# ==============================================
# SERVICIOS EXTERNOS (Configurar según necesidades)
# ==============================================

# Servicio de Autenticación
AUTH_SERVICE_HOST=https://auth.your-domain.com
SERVICES_JWT_SECRET=your-production-jwt-secret

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-production-email@your-domain.com
EMAIL_HOST_PASSWORD=your-secure-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=Your Company <noreply@your-domain.com>
REPLY_TO_EMAIL=support@your-domain.com

# ==============================================
# AWS / STORAGE
# ==============================================
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-production-bucket
# AWS_S3_ENDPOINT_URL=https://your-s3-endpoint.com
AWS_LOCATION=static
