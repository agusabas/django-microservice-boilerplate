# ==============================================
# CONFIGURACIÓN DE AMBIENTE - QA
# ==============================================
# INSTRUCCIONES: Copia este archivo como .env.qa y configura las variables

# Configuración básica
ENVIRONMENT=qa
SECRET_KEY=your-secret-key-for-qa-environment
DEBUG=False
DOMAIN=qa.your-domain.com

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=django_qa

# Configuración de zona horaria
TZ=America/Argentina/Buenos_Aires

# Hosts permitidos y CORS
ALLOWED_HOSTS=qa.your-domain.com,localhost,127.0.0.1
CORS_ORIGIN_WHITELIST=https://qa.your-domain.com
CSRF_TRUSTED_ORIGINS=https://qa.your-domain.com

# ==============================================
# BASE DE DATOS - POSTGRESQL
# ==============================================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=django_microservice_qa
POSTGRES_USER=postgres
POSTGRES_PASSWORD=qa-secure-password
PGTZ=America/Argentina/Buenos_Aires

# Variables adicionales para compatibilidad
DB_HOST=db
DB_PORT=5432
DB_NAME=django_microservice_qa
DB_USER=postgres
DB_PASSWORD=qa-secure-password

# ==============================================
# REDIS
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================
# CELERY
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=America/Argentina/Buenos_Aires

# ==============================================
# SERVICIOS EXTERNOS (QA)
# ==============================================

# Servicio de Autenticación
AUTH_SERVICE_HOST=https://auth-qa.your-domain.com
SERVICES_JWT_SECRET=your-qa-jwt-secret

# ==============================================
# EMAIL CONFIGURATION (QA)
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=qa-email@your-domain.com
EMAIL_HOST_PASSWORD=your-qa-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=QA Environment <qa@your-domain.com>
REPLY_TO_EMAIL=qa-support@your-domain.com

# ==============================================
# AWS / STORAGE (QA)
# ==============================================
AWS_ACCESS_KEY_ID=your-qa-aws-access-key
AWS_SECRET_ACCESS_KEY=your-qa-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-qa-bucket
# AWS_S3_ENDPOINT_URL=https://your-qa-s3-endpoint.com
AWS_LOCATION=static
